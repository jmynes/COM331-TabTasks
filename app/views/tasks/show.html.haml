  %p#notice= notice

  %p.display
    Verb:
    = @task.verb
  %p.display
    Deadline:
    = @task.deadline.timeframe
  %p.display
    Urgency:
    = @task.deadline.urgency
  -# This below doesn't quite work yet.
  -#%p.display
    -#User:
